@model IEnumerable<E_Ticaretim.Models.PaymentMethod>

@{
    ViewData["Title"] = "MakePayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MakePayment</h1>
<script>
function loadPaymentMethod(methodId) {
    $("#paymentDiv").load("/Payment/Method/" + methodId);
}
</script>
<select onchange="loadPaymentMethod(this.value)">
    <option value="0">Ödeme Yönteminizi seçiniz...</option>
    @foreach(var item in Model)
    {
        <option value="@item.PaymentMethodId"><a>@Html.DisplayFor(modelitem=>item.PaymentMethodName)</a></option>
    }
</select>
<div id="paymentDiv"></div>